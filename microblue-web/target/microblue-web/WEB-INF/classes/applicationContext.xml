<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-autowire="byName">

    <!-- DataSource定义 -->
    <bean id= "dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/purchase"></property>
        <property name="username" value="root"></property>
        <property name="password" value=""></property>
        <!-- 初始化连接-->
        <property name="initialSize" value="20"></property>
        <!-- 最大连接数-->
        <property name="maxActive" value="100"></property>
        <!-- 最大空闲连接-->
        <property name="minIdle" value="0" ></property>
        <!-- 是否自动回收超时连接-->
        <property name="removeAbandoned" value="true"></property>
        <!-- 超时时间 (秒数为单位)-->
        <property name="removeAbandonedTimeout" value="180"></property>
        <!-- 超时等待时间（毫秒）-->
        <property name="maxWait" value="3000"/>
        <property name="validationQuery">

            <value>SELECT 1</value>
        </property>
        <property name="testOnBorrow">
            <value>true</value>
        </property>

    </bean>
    <!-- TransactionManager定义 -->
    <bean id="transactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="transactionTemplate"
          class="org.springframework.transaction.support.TransactionTemplate">
        <property name="transactionManager" ref="transactionManager" />
    </bean>

    <!-- iBatis SQL map定义 -->
    <bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="configLocation" value="classpath:/sql-map-config.xml"/>
    </bean>
    
    
    <bean id="userDao" class="com.lj.dal.Dao.Impl.UserDaoImpl">  
    </bean>
    <bean id="IbatisGenericDao" class="com.lj.dal.Dao.Impl.IbatisGenericDaoImpl">  
    </bean>
 
 
 
</beans>